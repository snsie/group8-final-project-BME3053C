{
  "name": "Lua devcontainer",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {},
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y lua5.3 luarocks && sudo luarocks install luacheck",
  "customizations": {
    "vscode": {
      "extensions": [
        "sumneko.lua"
      ]
    }
  },
  "remoteUser": "vscode"
}
{
  "name": "Copilot Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [
    6080
  ],
  "waitFor": "onCreateCommand",
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "github.copilot",
        "github.copilot-chat",
        "sumneko.lua",
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "tasks": [
        {
          "label": "Open Terminal",
          "command": "workbench.action.terminal.new",
          "type": "command",
          "runAtStartup": true
        }
      ]
    }
  }
}
